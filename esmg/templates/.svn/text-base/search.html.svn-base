{% extends "base.html" %}

{% block title %}Search{% endblock %}

{% block content %}
  <h1>Search</h1>

  <div id="wide">
    <div id="search">
      <form action="{{ urlbase }}/search/" method="get">
        Search
        <input type="text" name="q" value="" size="40">
        <input type="radio" id="type_people" name="type" value="people" 
        checked="checked">
        <label for="type_people">people</label>
        <input type="radio" id="type_publications" name="type" 
        value="publications">
        <label for="type_publications">publications</label>
        <input type="submit" name="submit" value="Search">
      </form>
    </div>
  </div>
{% endblock %}
